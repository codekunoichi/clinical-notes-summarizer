# Clinical Notes Summarizer - Production Environment Configuration
# Healthcare-compliant environment variables for production deployment

# IMPORTANT: This file contains production defaults
# Override these values with actual production settings using:
# 1. Docker secrets (recommended for sensitive data)
# 2. Environment-specific .env files
# 3. Kubernetes ConfigMaps/Secrets
# 4. Container orchestration environment variables

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment Settings
CLINICAL_ENVIRONMENT=production
CLINICAL_DEBUG=false
CLINICAL_APP_NAME=Clinical Notes Summarizer API

# Server Configuration
CLINICAL_HOST=0.0.0.0
CLINICAL_PORT=8000

# =============================================================================
# HEALTHCARE COMPLIANCE SETTINGS
# =============================================================================

# PHI Protection (REQUIRED for healthcare)
CLINICAL_ENABLE_PHI_PROTECTION=true
CLINICAL_ENABLE_REQUEST_LOGGING=false
CLINICAL_LOG_LEVEL=INFO

# FHIR Compliance
CLINICAL_FHIR_VERSION=R4

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting (Healthcare Security)
CLINICAL_RATE_LIMIT_PER_MINUTE=120

# Performance Requirements (Healthcare Standards)
CLINICAL_MAX_PROCESSING_TIME_SECONDS=5.0
CLINICAL_MAX_REQUEST_SIZE_MB=10

# Allowed Hosts (CONFIGURE FOR YOUR DOMAIN)
CLINICAL_ALLOWED_HOSTS=localhost,127.0.0.1,clinical-api,yourdomain.com

# CORS Configuration (CONFIGURE FOR YOUR FRONTEND)
CLINICAL_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# AI Processing (Currently disabled for safety)
CLINICAL_ENABLE_AI_PROCESSING=false

# Model Cache Directory
CLINICAL_MODEL_CACHE_DIR=/app/cache/models

# =============================================================================
# DATABASE CONFIGURATION (if implemented)
# =============================================================================

# Summary Storage (Disabled for PHI protection)
CLINICAL_ENABLE_SUMMARY_STORAGE=false

# Database URL (if summary storage is enabled with proper PHI handling)
# CLINICAL_DATABASE_URL=postgresql://user:password@db:5432/clinical_summaries

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Health Check Configuration
CLINICAL_HEALTH_CHECK_TIMEOUT=30
CLINICAL_STARTUP_TIMEOUT=60

# Metrics Collection
CLINICAL_ENABLE_METRICS=true

# =============================================================================
# CONTAINER CONFIGURATION
# =============================================================================

# Python Settings
PYTHONPATH=/app
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Healthcare Container Settings
CONTAINER_TIMEZONE=UTC
CONTAINER_USER=clinical
CONTAINER_GROUP=clinical

# =============================================================================
# SECURITY HEADERS
# =============================================================================

# Content Security Policy
CLINICAL_CSP_POLICY=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'

# HSTS Configuration
CLINICAL_HSTS_MAX_AGE=31536000
CLINICAL_HSTS_INCLUDE_SUBDOMAINS=true

# =============================================================================
# HEALTHCARE AUDIT CONFIGURATION
# =============================================================================

# Audit Logging (PHI-compliant)
CLINICAL_ENABLE_AUDIT_LOG=true
CLINICAL_AUDIT_LOG_LEVEL=INFO
CLINICAL_AUDIT_LOG_FORMAT=json

# Compliance Reporting
CLINICAL_ENABLE_COMPLIANCE_METRICS=true

# =============================================================================
# WARNINGS AND DISCLAIMERS
# =============================================================================

# Healthcare Disclaimers (Always enabled)
CLINICAL_SHOW_DISCLAIMERS=true
CLINICAL_EDUCATIONAL_USE_ONLY=true
CLINICAL_NOT_MEDICAL_ADVICE=true

# =============================================================================
# PRODUCTION DEPLOYMENT NOTES
# =============================================================================

# 1. NEVER commit actual production secrets to version control
# 2. Use Docker secrets or Kubernetes secrets for sensitive data
# 3. Override CLINICAL_ALLOWED_HOSTS with your actual domain
# 4. Configure CLINICAL_ALLOWED_ORIGINS for your frontend domains
# 5. Set up proper SSL/TLS termination at load balancer level
# 6. Configure monitoring and alerting for healthcare compliance
# 7. Implement proper backup and disaster recovery procedures
# 8. Ensure all logs are PHI-compliant and properly secured
# 9. Regular security scanning and vulnerability assessments
# 10. Maintain audit trails for healthcare compliance requirements
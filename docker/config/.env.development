# Clinical Notes Summarizer - Development Environment Configuration
# Healthcare-safe development settings with debugging enabled

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment Settings
CLINICAL_ENVIRONMENT=development
CLINICAL_DEBUG=true
CLINICAL_APP_NAME=Clinical Notes Summarizer API (Dev)

# Server Configuration
CLINICAL_HOST=127.0.0.1
CLINICAL_PORT=8000

# =============================================================================
# HEALTHCARE COMPLIANCE SETTINGS (Maintained in Development)
# =============================================================================

# PHI Protection (ALWAYS enabled, even in development)
CLINICAL_ENABLE_PHI_PROTECTION=true
CLINICAL_ENABLE_REQUEST_LOGGING=false
CLINICAL_LOG_LEVEL=DEBUG

# FHIR Compliance
CLINICAL_FHIR_VERSION=R4

# =============================================================================
# SECURITY CONFIGURATION (Relaxed for Development)
# =============================================================================

# Rate Limiting (More permissive for testing)
CLINICAL_RATE_LIMIT_PER_MINUTE=300

# Performance Requirements
CLINICAL_MAX_PROCESSING_TIME_SECONDS=10.0
CLINICAL_MAX_REQUEST_SIZE_MB=50

# Allowed Hosts (Development)
CLINICAL_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,testserver

# CORS Configuration (Permissive for local development)
CLINICAL_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# AI Processing (Enabled for testing)
CLINICAL_ENABLE_AI_PROCESSING=true

# Model Cache Directory
CLINICAL_MODEL_CACHE_DIR=./cache/models

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Summary Storage (Disabled for PHI protection)
CLINICAL_ENABLE_SUMMARY_STORAGE=false

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================

# Auto-reload on changes
CLINICAL_RELOAD_ON_CHANGES=true

# Extended debugging
CLINICAL_ENABLE_DEBUG_ENDPOINTS=true

# Test data generation
CLINICAL_ENABLE_TEST_DATA=true

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Health Check Configuration
CLINICAL_HEALTH_CHECK_TIMEOUT=30
CLINICAL_STARTUP_TIMEOUT=60

# Metrics Collection
CLINICAL_ENABLE_METRICS=true

# =============================================================================
# CONTAINER CONFIGURATION
# =============================================================================

# Python Settings
PYTHONPATH=/app
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Development Container Settings
CONTAINER_TIMEZONE=UTC
CONTAINER_USER=clinical
CONTAINER_GROUP=clinical

# =============================================================================
# HEALTHCARE AUDIT CONFIGURATION
# =============================================================================

# Audit Logging (PHI-compliant, even in development)
CLINICAL_ENABLE_AUDIT_LOG=true
CLINICAL_AUDIT_LOG_LEVEL=DEBUG
CLINICAL_AUDIT_LOG_FORMAT=json

# =============================================================================
# WARNINGS AND DISCLAIMERS
# =============================================================================

# Healthcare Disclaimers (Always enabled)
CLINICAL_SHOW_DISCLAIMERS=true
CLINICAL_EDUCATIONAL_USE_ONLY=true
CLINICAL_NOT_MEDICAL_ADVICE=true

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================

# 1. PHI protection is ALWAYS enabled, even in development
# 2. No real patient data should ever be used in development
# 3. Use synthetic/test data for all clinical scenarios
# 4. Rate limiting is relaxed but still present for testing
# 5. Debug mode enables additional logging and error details
# 6. CORS is permissive for local frontend development
# 7. Auto-reload helps with rapid development cycles
# 8. Healthcare disclaimers are always shown
# 9. All healthcare safety validations remain active
# 10. Performance requirements are slightly relaxed for development